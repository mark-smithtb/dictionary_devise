<div class="navbar navigation">
  <div class="container">
    <a class="navbar-brand logo" href="<%= definitions_path %>"><%= image_tag("icon_rails.png", height:32) %></a>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
        <li id='new_word' class="navigation_link"><%= link_to 'Add a word', new_definition_path %></li>
      </li>
      <% end %>
    </ul>
    <ul class="nav navbar-nav pull-right">
      <li>
        <form method="get" action="<%= search_definitions_path %>" class="navbar-form pull-right" role="search">
          <input type="text" class="form-control" placeholder="Search" name="search">
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </li>
      <% if user_signed_in?%>
      <li><%= link_to "Logout", destroy_user_session_path, method: :delete, data: { confirm: 'Really logout?' }, class: "navigation_link" %></li>
      <%else%>
      <li><%= link_to 'Create an Account', new_user_registration_path, class: "navigation_link" %></li>
      <li class="dropdown" id="menuLogin">
        <a class="dropdown-toggle navigation_link" href="#" data-toggle="dropdown" id="navLogin">Login</a>
        <div class="dropdown-menu" style="padding:17px;">
          <%= form_tag(new_user_session_path, method: :post) %>
          <input name="email" id="email" type="text" placeholder="Email">
          <input name="password" id="password" type="password" placeholder="Password">
          <button class="btn btn-block btn-primary" type="submit">Login</button>
          <%= link_to user_omniauth_authorize_path(:github), class: "btn btn-block btn-social btn-github" do %>
          <i class="fa fa-lg fa-github"></i> Sign in with Github
          <% end %>
          <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-block btn-social btn-facebook" do %>
          <i class="fa fa-lg fa-facebook"></i> Sign in with Facebook
          <% end %>
        </form>
      </div>

      <%end%>
    </ul>
  </div>
</div>
</div>
